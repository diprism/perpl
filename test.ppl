
define climb = \stairs.
  case stairs of
  | Zero -> ()
  | Succ stairs -> 
    amb (climb stairs)   -- take one step
        (case stairs of  -- take two steps
         | Zero -> fail
         | Succ stairs -> climb stairs);

climb (Succ (Succ (Succ Zero))) -- returns the (n+1)'st Fibonacci number
--climb 3
-- correct: [21.0]